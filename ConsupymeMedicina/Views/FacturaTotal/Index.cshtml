@model IEnumerable<Modelo.Factura_Total>

@{
    ViewBag.Title = "Index";
}

<h2>Factura</h2>

<p>
    @Html.ActionLink("Crear", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.Display("Numero de Orden")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Creacion)
        </th>
        <th>
            @Html.Display("Numero Factura")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Envalaje)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Flete)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.N_Orden)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Creacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Numero_Factura)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Envalaje)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Flete)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @Html.ActionLink("Borrar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
