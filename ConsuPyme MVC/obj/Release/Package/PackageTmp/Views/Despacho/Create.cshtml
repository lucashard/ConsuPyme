                    Servicio total
                </th>
                <th>
                    Costo despacho productos
                </th>

                <th>Seleccionar</th>
            </tr>

            @foreach (var item in ViewBag.Productos as List<ConsuPyme_MVC.Models.Despachos>)
            {
