@model ConsuPyme_MVC.Helpers.PagedData<ConsuPyme_MVC.Models.Productos>

<table>
    <thead>
        <tr>
            <th>
                Codigo
            </th>
            <th>
                Descripcion
            </th>
            <th>
                Numero de lote
            </th>
            <th>
                Precio
            </th>
            <th>
                Seleccionar
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model.Data)
        {
            <tr>
                <td>
                    @person.Codigo
                </td>
                <td>
                    @person.Descripcion
                </td>
                <td>
                    @person.Num_Lote
                </td>
                <td>
                    @person.Precio_Unitario
                </td>
                <td>
                <input type="checkbox" name="visible" value="@person.Id" />
                    </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">
                @for (int i = 1; i <= Model.NumberOfPages; i++)
                {
                    if (i == Model.CurrentPage)
                    {
                        @i
                    }
                    else
                    {
                        <a class="page-number" href="javascript:void();">@i</a>
                    }
                }
            </td>
        </tr>
    </tfoot>
</table>