@model ConsuPyme_MVC.Models.Depositos

@{
    ViewBag.Title = "Index";
}
<a href="http://apycom.com/"></a>
<head>
<link href="@Url.Content("~/Content/layout.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
</head>
<h2>Listado Deposito</h2>

<p>
    <input type="button" title="Crear" value="Crear Deposito" onclick="location.href='@Url.Action("Create", "Deposito")'" class="btn"/>
</p>
<div style="width: 50%;">
<table class="table-striped" id="tabla">
    <tr>
        <th>
            Importe
        </th>
        <th>
            Nombre
        </th>
        <th>
            Numero_Factura
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.lista_productos.Values) {
    <tr>
                 <td>
                     @Html.Label(item.Nombre)
                 </td>
                 <td>
                     @Html.Label(item.Numero_Factura.ToString())
                 </td>
                 <td>
                     @Html.Label(item.Importe.ToString())
                 </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Nombre },new { onclick = "return confirm('¿Estas seguro de borrar el deposito?');" })
        </td>
    </tr>
}

</table>
