@model PagedList.IPagedList<ConsuPyme_MVC.Models.Posicion_arancelaria>

@{
    ViewBag.Title = "Index";
}

<a href="http://apycom.com/"></a>
<head>
<link href="@Url.Content("~/Content/layout.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
</head>
<h2>Listado Posicion Arancelaria</h2>

<p>
    <input type="button" title="Crear" value="Crear Posicion Arancelaria" onclick="location.href='@Url.Action("Create", "Posicion_Arancelaria")'" class="btn"/>
</p>
<div style="width: 50%;">
<table class="table-striped" id="tabla">

    <tr>
        <th>
            Numero de pocicion
        </th>
        <th>
            Porcentaje de importacion
        </th>
        <th>
            Porcentaje de iva
        </th>
        <th>
            Porcentaje de taza de estadistica
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Numero_Posicion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Porcentaje_Importacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Porcentaje_Iva)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Porcentaje_Taza_Estadistica)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Id },new { onclick = "return confirm('¿Estas seguro de borrar la posicion arancelaria?');" })
        </td>
    </tr>
}

</table>
       <div>
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
    of @Model.PageCount
     
    @if (Model.HasPreviousPage)
    {
        @Html.ActionLink("<<", "Index", new { page = 1, sortOrder = ViewBag.CurrentSort, currentFilter=ViewBag.CurrentFilter  })
        @Html.Raw(" ");
        @Html.ActionLink("< Ant.", "Index", new { page = Model.PageNumber - 1, sortOrder = ViewBag.CurrentSort, currentFilter=ViewBag.CurrentFilter  })
    }
    else
    {
        @:<<
        @Html.Raw(" ");
        @:< Prev
    }
     
    @if (Model.HasNextPage)
    {
        @Html.ActionLink("Sig >", "Index", new { page = Model.PageNumber + 1, sortOrder = ViewBag.CurrentSort, currentFilter=ViewBag.CurrentFilter  })
        @Html.Raw(" ");
        @Html.ActionLink(">>", "Index", new { page = Model.PageCount, sortOrder = ViewBag.CurrentSort, currentFilter=ViewBag.CurrentFilter  })
    }
    else
    {
        @:Next >
        @Html.Raw(" ")
        @:>>
    }
           
</div>

    </div>
