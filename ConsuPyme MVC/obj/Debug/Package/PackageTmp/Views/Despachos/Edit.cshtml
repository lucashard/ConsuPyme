            var busqueda = $("#Busqueda").val();
            $.ajax({
                type: "GET",
                url: "@Url.Action("BusquedaEdicion", "Despachos")",
                async: false,
                data: { bus: busqueda },
                contentType: 'application/json',
                success: function(result) {
                    debugger;
                    $("#GridData").html(result);
                }

            });
        }

        function actualizacion(datos) {
            $("#GridData").html(datos);
            //  $(".field-validation-error").hide();
        }
    </script>
