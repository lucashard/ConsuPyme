@model ConsuPyme_MVC.Models.Fechas
@{
    ViewBag.Title = "Index";
    
    Layout = null;
}
<head>
<script src="@Url.Content("~/Scripts/jquery-2.0.2.min.js")" type="text/javascript"> </script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
  
<script type="text/javascript">
    $(document).ready(function() {
        debugger;
//        var fecha = new Date();
//        if (fecha.getHours() < 15)
//            {fecha=fecha.add(-1);}
        $("#FechaDesde").datepicker({
            dateFormat: "dd-mm-yy",
            firstDay: 1,
             maxDate: new Date()  ,
            dayNamesMin: ["Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa"],
            dayNamesShort: ["Dom", "Lun", "Mar", "Mie", "Jue", "Vie", "Sab"],
            monthNames:
            ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio",
            "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"],
            monthNamesShort:
            ["Ene", "Feb", "Mar", "Abr", "May", "Jun",
            "Jul", "Ago", "Sep", "Oct", "Nov", "Dic"]
        });
        $("#FechaHasta").datepicker({
            dateFormat: "dd-mm-yy",
            firstDay: 1,
             maxDate: new Date()  ,
            dayNamesMin: ["Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa"],
            dayNamesShort: ["Dom", "Lun", "Mar", "Mie", "Jue", "Vie", "Sab"],
            monthNames:
            ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio",
            "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"],
            monthNamesShort:
            ["Ene", "Feb", "Mar", "Abr", "May", "Jun",
            "Jul", "Ago", "Sep", "Oct", "Nov", "Dic"]
        });

    });
</script>
</head>
@using (Html.BeginForm())
{
    <div align="center"><h2>Reportes</h2></div>
    <h1>Estadistica de productos por proveedor</h1>
    <div>@Html.Label("Despacho")</div>
    <div>@Html.DropDownList("Reporte", (SelectList)ViewBag.Reporte)</div>

    
    <br/>
    if (((IEnumerable<dynamic>)ViewBag.Reporte).Any())
    {
         <input type="submit" value="Crear Reporte" class="btn"/>
    }
     <br/>
    <br/>
    <h1>Estadistica de productos por fecha</h1>
    <div>@Html.Label("Fecha Desde")</div>
    
    <div>@Html.TextBoxFor(x => x.FechaDesde)</div>
    <div>@Html.Label("Fecha Hasta")</div>
    <div>@Html.TextBoxFor(x => x.FechaHasta)</div>
    <br/>
   <input type="submit" value="Crear Reporte" class="btn"/>
}