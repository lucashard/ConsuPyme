@model IEnumerable<ConsuPyme_MVC.Models.Despachantes>

@{
    ViewBag.Title = "Index";
    
}


<head>
<link href="@Url.Content("~/Content/layout.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
</head>
<h2>Listado Despachante</h2>
<p>
    <input type="button" title="Crear" value="Crear Despachante" onclick="location.href='@Url.Action("Create", "Despacho")'" class="btn"/>
</p>

@{
    var grid = new WebGrid(source: @Model,
        defaultSort: "Rank",
        canSort: true,
        rowsPerPage: 10
       );
}
<div style="width: 100%;">
     @grid.GetHtml("webgrid", "webgrid-header", "webgrid-footer",
        alternatingRowStyle: "webgrid-alternating-row",
        selectedRowStyle: "webgrid-selected-row",
        rowStyle: "webgrid-row-style",
        columns: grid.Columns(
                grid.Column("Nombre", "Nombre"),
                grid.Column("Numero_Factura", "Numero Factura"),
                grid.Column("Ley", "Ley"),
                grid.Column("Djai", "Djai"),
                grid.Column("AD_Sim", "AD Sim"),
                grid.Column("Gastos_Despacho", "Gastos Despachos"),
                grid.Column("Desconsolidado", "Desconsolidado"),
                grid.Column("Desconsolidado", "Desconsolidado"),
                grid.Column("Servicios", "Servicios"),
                    grid.Column("Acciones", format: @<text>
    @Html.ActionLink("Editar", "Edit", new { id = item.Id })
    
@Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { onclick = "return confirm('¿Estas seguro de borrar el despachantes?');" })
    </text>)
            )
        )
</div>

